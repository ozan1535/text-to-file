{
  "manifest_version": 3,
  "name": "Save Text to File  (TXT, DOCX, PDF, HTML)",
  "version": "1.2",
  "description": "Save selected text as TXT, DOCX, PDF, or HTML",
  "permissions": ["contextMenus", "scripting", "activeTab", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/*.js", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
